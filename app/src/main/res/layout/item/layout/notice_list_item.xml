<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@drawable/linearlayout_border_bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="?attr/fontsize_small"
            android:text="标题"/>
        <View
            android:layout_width="5dp"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/notice_list_item_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="?attr/fontsize_small"
            android:textStyle="bold"
            android:text="title"/>
        <TextView
            android:id="@+id/notice_list_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/shape_button_rounded_rect_color_primary"
            android:textColor="?attr/colorPrimary"
            android:textSize="?attr/fontsize_small"
            android:text="notice"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="?attr/fontsize_small"
            android:text="发送方"/>
        <View
            android:layout_width="5dp"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/notice_list_item_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="?attr/fontsize_small"
            android:text="name"/>
        <View
            android:layout_width="5dp"
            android:layout_height="0dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="?attr/fontsize_small"
            android:text="发送时间"/>
        <View
            android:layout_width="5dp"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/notice_list_item_send_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="?attr/fontsize_small"
            android:text="time"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="?attr/fontsize_small"
            android:text="内容"/>
        <View
            android:layout_width="5dp"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/notice_list_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="?attr/fontsize_small"
            android:text="content"
            android:maxLines="2"/>
    </LinearLayout>

</LinearLayout>