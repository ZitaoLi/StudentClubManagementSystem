<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/linearlayout_border">

    <LinearLayout
        android:id="@+id/click_zone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_head_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_launcher_background"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:textSize="14sp"
                    android:textColor="#000fff"
                    android:text="null"/>
                <TextView
                    android:id="@+id/club_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:textSize="12sp"
                    android:text="null"/>

            </LinearLayout>

            <!--<ImageButton-->
            <!--android:id="@+id/more"-->
            <!--android:layout_width="40dp"-->
            <!--android:layout_height="40dp"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:src="@drawable/ic_more_vert_black_24dp"-->
            <!--android:background="#00000000"-->
            <!--android:visibility="gone"/>-->

            <ImageView
                android:id="@+id/more"
                style="@style/Widget.AppCompat.ActionButton.Overflow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:theme="@style/Widget.AppCompat.PopupMenu"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="null"/>
            <TextView
                android:id="@+id/content_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="2"
                android:ellipsize="end"
                android:text="null"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[image]"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/additional_image"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/ic_launcher_background"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/linearlayout_border_top">

        <Button
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/ic_mood_black_24dp"
            android:gravity="left|center_vertical"
            android:text="0"/>
        <Button
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/ic_comment_black_24dp"
            android:gravity="left|center_vertical"
            android:text="0"/>
        <Button
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/ic_share_black_24dp"
            android:gravity="left|center_vertical"/>

    </LinearLayout>

</LinearLayout>
