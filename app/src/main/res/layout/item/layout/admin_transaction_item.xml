<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/admin_transaction_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linearlayout_border_bottom"
        android:padding="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="?attr/item_height_1"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/admin_transaction_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/shape_button_rounded_rect_color_primary"
                android:textColor="?attr/colorPrimary"
                android:text="type"/>
            <TextView
                android:id="@+id/admin_transaction_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="?attr/fontsize_large"
                android:textStyle="bold"
                android:text="title"
                android:maxLines="2"
                android:ellipsize="end"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/admin_transaction_request_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textSize="?attr/fontsize_small"
                android:text="who"/>
            <TextView
                android:id="@+id/admin_transaction_request_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="?attr/fontsize_small"
                android:text="when"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/admin_transaction_content_brief"
                android:layout_width="match_parent"
                android:layout_height="?attr/item_height_1"
                android:textSize="?attr/fontsize_medium"
                android:minLines="2"
                android:maxLines="5"
                android:ellipsize="end"
                android:text="content"/>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>